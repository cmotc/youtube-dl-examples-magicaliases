#! /bin/sh
music(){
	nohup youtube-dl -v -k \
                --prefer-free-formats \
		--output "~/Downloads/Music/%(creator)s.%(uploader)s/%(title)s.%(ext)s" \
		"$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
musicplaylist(){
	nohup youtube-dl -v -k \
                --prefer-free-formats \
		--output "~/Downloads/Music/%(playlist)s/%(title)s-%(autonumber)s.%(ext)s" \
		"$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
movie(){
	nohup youtube-dl -v -k \
		--prefer-free-formats \
		--output "~/Downloads/Movies/%(creator)s.%(uploader)s/%(title)s.%(ext)s" \
		"$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
movieplaylist(){
	nohup youtube-dl -v -k \
		--prefer-free-formats \
		--output "~/Downloads/Movies/%(playlist)s/%(title)s-%(autonumber)s.%(ext)s" \
		"$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
show(){
	nohup youtube-dl -v -k \
		--prefer-free-formats \
		--output "~/Downloads/TVShows/%(creator)s.%(uploader)s/%(title)s.%(ext)s" \
		"$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
showplaylist(){
	nohup youtube-dl -v -k \
		--prefer-free-formats \
		--output "~/Downloads/TVShows/%(playlist)s/%(title)s-%(autonumber)s.%(ext)s" \
		"$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
presentation(){
	nohup youtube-dl -v -k \
		--prefer-free-formats \
		--output "~/Downloads/Presentations/%(creator)s.%(uploader)s/%(title)s.%(ext)s" \
		"$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
presentationplaylist(){
	nohup youtube-dl -v -k \
		--prefer-free-formats \
		--output "~/Downloads/Presentations/%(playlist)s/%(title)s-%(autonumber)s.%(ext)s" \
		"$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
ydllog(){
	tail -f ~/Downloads/youtube-dl.log
}

alias song=music
alias song=musicplaylist
alias film=movie
alias filmpl=movieplaylist
alias tv=show
alias tvpl=showpl
alias conv=presentation
alias convpl=presentationplaylist
alias ylog=ydllog
