#! /bin/sh
music(){
	nohup youtube-dl -v  \
                --prefer-free-formats \
		--output "~/Downloads/Music/%(creator)s.%(uploader)s/%(title)s.%(ext)s" \
		"$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
musicplaylist(){
	nohup youtube-dl -v  \
                --prefer-free-formats \
		--output "~/Downloads/Music/%(playlist)s/%(title)s.%(ext)s" \
		"$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
