#! /bin/sh
music(){
	nohup youtube-dl -v -k \
                --prefer-free-formats \
		--output "~/Downloads/Music/%(title)s/%(title)s.%(ext)s" \
		"$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
musicplaylist(){
	nohup youtube-dl -v -k \
                --prefer-free-formats \
		--output "~/Downloads/Music/%(title)s/%(title)s.%(ext)s" \
		--yes-playlist "$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
movie(){
	nohup youtube-dl -v -k \
		--prefer-free-formats \
		--output "~/Downloads/Movies/%(title)s/%(title)s.%(ext)s" \
		"$1" &> ~/Downloads/youtube-dl.log &
	bash -c 'sleep 3; cat ~/Downloads/youtube-dl.log' &
	echo "ydllog to view log"
}
movieplaylist(){
	nohup youtube-dl -v -k \
		--prefer-free-formats \
